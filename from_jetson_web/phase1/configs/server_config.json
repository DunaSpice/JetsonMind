{
    "server": {
        "host": "0.0.0.0",
        "port": 8000,
        "workers": 1
    },
    "memory": {
        "ram_budget_gb": 5.5,
        "swap_dir": "/tmp/model_swap",
        "optimization_interval": 60
    },
    "models": {
        "preload": [
            "Qwen/Qwen2.5-0.5B-Instruct",
            "Qwen/Qwen2.5-1.5B-Instruct"
